<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tecsocapp.EmpresaMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:background="#558D37" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="Nível de Qualidade de Sementes de Soja" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:maxLength="29"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textSize="17sp"
                    tools:text="Biologia" />

            </RelativeLayout>


            <TextView
                android:id="@+id/item_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_descricao"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceListItem"
                tools:text="Nossa empresa está necessitando alterar a forma como o controle de qualidade é realizado atualmente. Estamos pensando em ababababababababa" />

            <TextView
                android:id="@+id/item_uni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_local"
                android:drawablePadding="10dp"
                android:textAppearance="?android:attr/textAppearanceListItem"
                tools:text="AgroSoja" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>